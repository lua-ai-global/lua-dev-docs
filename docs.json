    "primary": "#ff173a",
    "light": "#fe1052",
    "dark": "#fe1052"
  },
  "favicon": "/favicon.svg",
  "navigation": {
    "tabs": [
      {
        "tab": "Documentation",
        "groups": [
          {
            "group": "Getting Started",
            "pages": [
              "index",
              "getting-started/quick-start",
              "getting-started/installation",
              "getting-started/first-skill"
