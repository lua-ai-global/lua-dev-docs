          },
          {
            "group": "Core Concepts",
            "pages": [
              "concepts/skills-and-tools",
              "concepts/platform-apis",
              "concepts/environment-variables",
              "concepts/workflows"
            ]
          },
          {
            "group": "CLI Reference",
            "pages": [
              "cli/overview",
              "cli/authentication",
              "cli/skill-management",
              "cli/development",
              "cli/troubleshooting"
            ]
          }
        ]
      },
      {
        "tab": "API Reference",
        "groups": [
          {
            "group": "Core Classes",
            "pages": [
              "api/overview",
              "api/luaskill",
              "api/luatool"
            ]
          },
          {
            "group": "Platform APIs",
            "pages": [
              "api/user",
              "api/data",
              "api/products",
              "api/baskets",
              "api/orders"
            ]
          },
          {
            "group": "Utilities",
            "pages": [
              "api/environment"
            ]
          }
        ]
      },
      {
        "tab": "Template Guide",
        "groups": [
          {
            "group": "Template",
            "pages": [
              "template/overview",
              "template/project-structure",
              "template/building-skills",
              "template/multi-skill-projects",
              "template/best-practices"
            ]
          },
          {
            "group": "Tool Examples",
            "pages": [
              "examples/overview",
              "examples/weather",
              "examples/user-data",
              "examples/products",
              "examples/baskets",
              "examples/custom-data",
              "examples/payment"
            ]
          }
        ]
      }
    ],
    "global": {
      "anchors": [
        {
          "anchor": "GitHub",
          "href": "https://github.com/lua-ai/lua-cli",
          "icon": "github"
        },
        {
          "anchor": "Platform",
          "href": "https://heylua.ai",
          "icon": "globe"
        },
        {
          "anchor": "npm Package",
          "href": "https://www.npmjs.com/package/lua-cli",
          "icon": "box"
        }
      ]
    }
  },
  "logo": {
    "light": "/logo/light.svg",
    "dark": "/logo/dark.svg"
  },
  "navbar": {
    "links": [
      {
        "label": "Support",
        "href": "mailto:support@lua.ai"
      }
    ],
    "primary": {
      "type": "button",
      "label": "Platform",
      "href": "https://heylua.ai"
    }
  },
  "contextual": {
    "options": [
      "copy",
      "view",
      "chatgpt",
      "claude",
      "cursor"
    ]
  },
  "footer": {
    "socials": {
      "github": "https://github.com/lua-ai/lua-cli"
    }
  }
